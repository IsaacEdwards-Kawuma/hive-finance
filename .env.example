APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
# For local: http://localhost. For access from anywhere: set to your public URL (e.g. https://your-domain.com)
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
# When using HTTPS in production so team can access from anywhere:
# SESSION_SECURE_COOKIE=true

# Optional: comma-separated domains that can use the API (for Sanctum). APP_URL domain is auto-included.
# SANCTUM_STATEFUL_DOMAINS=your-domain.com,www.your-domain.com

# When frontend is on a different origin (e.g. Vercel): comma-separated allowed origins for CORS.
# FRONTEND_URL=https://your-app.vercel.app
# For local dev with Vite: FRONTEND_URL=http://localhost:5173

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"
# When frontend is deployed separately (e.g. Vercel), set API base URL (no trailing slash). Leave empty for same-origin.
# VITE_API_URL=https://your-api.onrender.com

# Stripe (optional â€“ for invoice Pay now links)
# STRIPE_SECRET=sk_test_...
# STRIPE_KEY=pk_test_...
# Stripe webhook secret for marking invoices paid (optional). In Stripe Dashboard add endpoint: https://your-domain/api/stripe/webhook, event: checkout.session.completed
# STRIPE_WEBHOOK_SECRET=whsec_...
